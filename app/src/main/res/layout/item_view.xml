<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginBottom="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="15dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:text="Data: "
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txt_item_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorSecundary"
            android:text="20/20/2020"
            android:layout_toEndOf="@id/data"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/sus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_below="@id/txt_item_data"
            android:text="SUSPEITOS: "/>

        <TextView
            android:id="@+id/txt_item_suspeitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorSecundary"
            android:layout_below="@id/txt_item_data"
            android:layout_toEndOf="@id/sus"
            android:singleLine="true"
            android:maxWidth="60dp"
            android:text="100"/>

        <TextView
            android:id="@+id/conf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sus"
            android:layout_marginStart="80dp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_below="@id/txt_item_data"
            android:text="CONFIRMADOS: "/>

        <TextView
            android:id="@+id/txt_item_confirmados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorSecundary"
            android:layout_below="@id/txt_item_data"
            android:layout_toEndOf="@id/conf"
            android:singleLine="true"
            android:maxWidth="60dp"
            android:text="90565"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="15dp"
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/virus" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/virus" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/virus" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>